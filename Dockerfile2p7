FROM ubuntu:18.04

# ADD . /pymoc
WORKDIR /pymoc

RUN apt-get update -y && \
    apt-get install -y python2.7-dev python-pip git curl
RUN pip install numpy==1.13 && \
    pip install scipy==1.3 && \
    pip install matplotlib && \
    pip install pytest==5.1.1 && \
    pip install codecov && \
    pip install pytest-cov && \
    pip install sphinx && \
    pip install yapf && \
    pip install futures && \
    pip install recommonmark && \
    pip install sphinx-rtd-theme && \
    pip install jupyter-sphinx-theme
RUN ln -s /usr/bin/python2.7 /usr/bin/python

CMD bash